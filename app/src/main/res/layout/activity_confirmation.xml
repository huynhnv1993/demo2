<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.windows10gamer.demo2.activity.ConfirmationActivity">
    <android.support.v7.widget.Toolbar
        app:titleTextColor="#f9f6f5"
        android:background="#716562"
        app:title="Đặt hàng thành công"
        android:id="@+id/toolbar_confirmation"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
    </android.support.v7.widget.Toolbar>
    <TextView
        android:gravity="center"
        android:text="CẢM ƠN QUÝ KHÁCH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/txt_content"
        android:text="Nội dung thanh toán"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Trang chủ"
        android:id="@+id/button_backhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
